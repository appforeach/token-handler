{
  "realm": "poc",
  "enabled": true,
  "displayName": "POC Realm",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "browserFlow": "browser",
  "directGrantFlow": "direct grant",
  "clientScopes": [
    {
      "name": "api-audience",
      "description": "API Audience Scope for token exchange",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "false"
      },
      "protocolMappers": [
        {
          "name": "api-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "clients": [
    {
      "clientId": "api",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "your-client-secret-here",
      "publicClient": false,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:5198/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:5198"
      ],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "attributes": {
        "access.token.lifespan": "600",
        "client.secret.creation.time": "1234567890",
        "oauth2.token.exchange.grant.enabled": "true"
      },
      "authorizationSettings": {
        "policyEnforcementMode": "ENFORCING",
        "resources": [
          {
            "name": "Token Exchange Permission",
            "type": "urn:api:resources:token-exchange",
            "ownerManagedAccess": false,
            "attributes": {}
          }
        ],
        "policies": [
          {
            "name": "bff-client-policy",
            "description": "Policy for bff client",
            "type": "client",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "clients": "[\"bff\"]"
            }
          },
          {
            "name": "token-exchange-permission",
            "description": "Permission for token exchange",
            "type": "resource",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "resources": "[\"Token Exchange Permission\"]",
              "applyPolicies": "[\"bff-client-policy\"]"
            }
          }
        ],
        "scopes": [
          {
            "name": "token-exchange"
          }
        ]
      },
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "bff",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "your-client-secret-here",
      "publicClient": false,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:5198/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:5198"
      ],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "attributes": {
        "access.token.lifespan": "600",
        "client.secret.creation.time": "1234567890",
        "oauth2.token.exchange.grant.enabled": "true"
      },
      "defaultClientScopes": [
        "email",
        "profile"
      ],
      "optionalClientScopes": [
        "api-audience"
      ],
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "bff",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        },
        {
          "name": "api-audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "clientScopeMappings": {
    "api": [
      {
        "client": "bff",
        "roles": []
      }
    ]
  },
  "users": [
    {
      "username": "test",
      "email": "test@example.com",
      "emailVerified": true,
      "enabled": true,
      "firstName": "Test",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "test123",
          "temporary": false
        }
      ],
      "realmRoles": [ "user" ],
      "clientRoles": {
        "account": [ "manage-account", "view-profile" ]
      }
    },
    {
      "username": "admin",
      "email": "admin@example.com",
      "emailVerified": true,
      "enabled": true,
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": [ "admin", "user" ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "User role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      }
    ]
  }
}
